<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Hair Salon</title>
  </head>
  <body>
    <div class="container">
      <h1>Hair Salon</h1>
        <ul>
            @if(Model.Count != 0)
            {
              @foreach(var item in Model)
              {
                <li><a href="/stylists/@item.GetId()">@item.GetName()</a><a href="/stylist/edit/@item.GetId()"> Edit</a> | <a href="/stylist/delete/@item.GetId()">Delete</a></li>
              }
            }
            else
            {
              <li>No Stylists added to database yet.</li>
            }
        </ul>
        <form action="/stylist/new" method="post">
          <label for="stylist-add">New Stylist: </label>
          <input type="text" name="stylist-add">
          <button type="submit" name="button" class="btn btn-success">Add</button>
        </form>
    </div>
  </body>
